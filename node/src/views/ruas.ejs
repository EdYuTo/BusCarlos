<% include partials/head.ejs %>
<body>
<% include partials/navbar.ejs %>

    <div class="container-fluid">
        <div class="row content">
            <% include partials/sidenav.ejs %>

            <div class=" container-fluid col-12 col-sm-8 col-md-8 col-lg-9 col-xl-10 text-left">

                <h1 id="busca">Busca por Rua</h1>

                <form id="barralinha">
                    <div class="row">
                        <div class="col-12 col-sm-12 col-md-12 col-lg-12 col-xl-12">
                            <input type="text" class="form-control" placeholder="Pesquisar uma rua especifica">
                        </div>
                    </div>
                </form>

                <div id="tabelalinhas">
                    <table class="table table-striped">
                        <thead>
                        <tr>
                            <th>Nome da Rua</th>
                            <th>Informacao das Linhas</th>
                        </tr>
                        </thead>
                        <tbody>
                        <%for(let i = 0; i < rows.length; i++) { %>
                        <tr>
                            <td class= "text-center"><%=rows[i].nome%></td>
                            <td class= "text-center"><a class="btn btn-info">Info</a></td>
                        </tr>
                        <% }%>
                        </tbody>
                    </table>
                </div>

        </div>


        </div>
    </div>
    <script src="js/jquery.min.js"></script>
    <script src="js/bootstrap.min.js"></script>
    </body>
</html>
