<% include partials/head.ejs %>
<body>
<% include partials/navbar.ejs %>

    <div class="container-fluid">
        <div class="row content">
            <% include partials/sidenav.ejs %>

            <div class=" container-fluid col-12 col-sm-8 col-md-8 col-lg-9 col-xl-10 text-left">

                <h1 id="busca">Busca por Linha</h1>

                <form id="barralinha">
                    <div class="row">
                        <div class="col-12 col-sm-12 col-md-12 col-lg-12 col-xl-12">
                            <input class="form-control" id="buscalinha" type="text" placeholder="Buscar linhas especificas...">
                        </div>
                    </div>
                </form>

                <div id="tabelalinhas">
                    <table class="table table-hover table-fixed">
                        <thead>
                            <tr>
                                <th>Numero</th>
                                <th>Nome</th>
                                <th>Info</th>
                                <th>Favorito</th>
                            </tr>
                        </thead>
                        <tbody>
                            <%for(let i = 0; i < rows.length; i++) { %>
                            <tr>
                                <td class= "text-center"><%=rows[i].numero%></td>
                                <td class= "text-center"><%=rows[i].nome%></td>
                                <td class= "text-center"><a href="linhas/<%=rows[i].numero%>" class="btn btn-danger">Info</a></td>
                                <td class= "text-center">favoritar</td>
                            </tr>
                            <% }%>
                        </tbody>
                    </table>
                </div>

        </div>


        </div>
    </div>
    <script src="js/jquery.min.js"></script>
	<script src="js/bootstrap.min.js"></script>
	<script>
        $(document).ready(function(){
          $("#buscalinha").on("keyup", function() {
            var value = $(this).val().toLowerCase();
            $("#tabelalinhas tbody tr").filter(function() {
              $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
            });
          });
        });
    </script>
    </body>
</html>
